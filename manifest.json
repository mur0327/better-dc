{
  "manifest_version": 3,
  "name": "BetterDC",
  "version": "1.0",
  "description": "디시인사이드 경험을 개선하는 확장 프로그램",
  "icons": {
    "16": "images/icon16.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": ["https://gall.dcinside.com/*"],
  "content_scripts": [
    {
      "matches": ["https://gall.dcinside.com/mgallery/board/view/*", "https://gall.dcinside.com/board/view/*"],
      "css": ["styles/style.css"],
      "js": ["scripts/main.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/config.local.js",
        "scripts/logger.js",
        "scripts/filter.js",
        "scripts/post-navigation.js",
        "scripts/comment.js",
        "scripts/volume.js"
      ],
      "matches": ["https://gall.dcinside.com/*"]
    }
  ]
}
